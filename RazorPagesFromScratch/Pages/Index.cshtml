@page
@model RazorPagesFromScratch.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    ViewBag.HeaderText = "Your To-Do list";
}
<div class="col-md-6 col-md-offset-3 jumbotron">
    <div class="text-center">

        <h1>@ViewBag.HeaderText</h1>
        <form method="post" action="/lists/new" asp-antiforgery="true">
            <input asp-for="Item.Text" placeholder="Enter a to-do item" class="form-control input-lg" />
        </form>
    </div>
    </div>



