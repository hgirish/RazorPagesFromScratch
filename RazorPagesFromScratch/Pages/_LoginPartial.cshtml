@using Microsoft.AspNetCore.Identity
@inject SignInManager<ListUser> SignInManager
@inject UserManager<ListUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-page="Account/Logout"  method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                Hello @UserManager.GetUserName(User)!
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <form action="/account/sendloginemail" method="post" asp-antiforgery="true">
            Enter email to log in: <input name="email" type="email" />

        </form>
    </ul>
}
