@page "{id:int}"
@model RazorPagesFromScratch.Pages.Lists.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    var listId = RouteData.Values["id"];
}

    <div class="col-md-6 col-md-offset-3 jumbotron">
        <div class="text-center">


            <h1>Your To-Do list</h1>
            <form method="post"  asp-route-id="@listId" asp-antiforgery="true">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Item.Text" placeholder="Enter a to-do item" class="form-control input-lg" />
                <span asp-validation-for="Item.Text" class="text-danger"></span>
            </form>
        </div>
    </div>

   
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <table id="id_list_table" class="table">
                @foreach (var item in Model.Items.Select((value, index) => new { value, index }))
                {
                    <tr><td>@(item.index + 1): @item.value.Text</td></tr>
                }

            </table>
            </div></div>
<span class="hidden">template: list.html</span>